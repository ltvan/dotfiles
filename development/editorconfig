# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.{cs,fs,py}]
indent_size = 4

[*.py]
indent_size = 4

[*.{md,rst,in}]
indent_style = ignore
indent_size = ignore
